{{ renderComponent('FormMailingList', { preContentHtml: lbl_subscribeHtml }) }}

<div class="flyntComponent" is="flynt-navigation-footer">
	<div class="container footer-padding">
		<div class="footer-left-side">
			<div class="navigation">
				<div class="footer-headers">{{ lbl_contactUs }}</div>
				{{ lbl_contactHtml|e('wp_kses_post') }}
				<div class="content">{{ icons|e('wp_kses_post') }}</div>
			</div>
			<div class="navigation">
				<div class="footer-headers">{{ lbl_quickLinks }}</div>

				{% if menu %}
					<nav class="navigation" aria-label="{{ __("Footer", "flynt") }}">
						{% include 'Partials/_menu.twig' with { 'items': menu.get_items, 'level': '0', 'maxLevel': maxLevel } only %}
					</nav>
				{% endif %}

			</div>
		</div>
	</div>
</div>
